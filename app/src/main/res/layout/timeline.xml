<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:background="?colorAccent"
android:layout_height="match_parent">



<android.support.design.widget.NavigationView
    android:id="@+id/navView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/left_menu"
    app:headerLayout="@layout/left_menu_header"
    android:fitsSystemWindows="true"
    android:background="?colorAccent"
    >

</android.support.design.widget.NavigationView>


<RelativeLayout
    android:id="@+id/new_timeline"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?colorPrimary" />

    <View
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/layoutTop"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/post_floating_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:src="@drawable/post_write"
        android:layout_above="@+id/navigation_bar"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@android:color/holo_red_light"
        app:fabCustomSize="45dp"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutTop"
        android:layout_marginBottom="55dp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/timeline_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:background="?colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="?colorPrimaryDark"
        app:itemIconTint="@color/black_fons"
        app:itemTextColor="?colorAccent"
        app:menu="@menu/navigation"
        />



</RelativeLayout>

<RelativeLayout
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="-40dp"
    android:layout_marginStart="0dp"
    android:adjustViewBounds="true">

    <ImageView
        android:id="@+id/circular_image_view"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="fitStart"
        android:src="@drawable/default_profil_photo" />

    <TextView
        android:id="@+id/local_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/circular_image_view"
        android:singleLine="true"
        android:text="Jhon Cobra"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />



</RelativeLayout>


</android.support.v4.widget.DrawerLayout>