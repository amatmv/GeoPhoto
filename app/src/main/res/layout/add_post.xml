<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorAccent"
    android:fitsSystemWindows="true">



    <RelativeLayout
        android:id="@+id/new_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="?colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="ADD A NEW POST!"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <View
            android:id="@+id/secondView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTop"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"

            android:background="?colorAccent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/layoutTop"
            android:visibility="gone"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/textTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_recycler_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="What's happening?"
            android:textColor="@color/black"
            android:textSize="20dp" />



        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textTop"
            android:background="?colorPrimaryDark">

            <EditText
                android:id="@+id/textPost"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="2dp"
                android:background="?colorAccent"
                android:gravity="top"
                android:padding="20dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="8"/>
        </FrameLayout>

        <TextView android:id="@+id/addPhoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout"
            android:gravity="right"
            android:layout_marginTop="10dip"
            android:layout_marginRight="20dip"
            android:text="ðŸ“·Add photo"
            android:textSize="17dip"/>


        <HorizontalScrollView
            android:id="@+id/scrollview1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/addPhoto"
            android:layout_marginTop="10dp"
            android:background="?colorPrimary"
            android:visibility="gone"
            android:fillViewport="true">
            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/targetimage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/targetimage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="110dp"
                    tools:srcCompat="@tools:sample/avatars"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/targetimage3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="220dp"
                    tools:srcCompat="@tools:sample/avatars"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/targetimage4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="330dp"
                    android:layout_marginRight="20dp"
                    tools:srcCompat="@tools:sample/avatars"/>

            </FrameLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/button_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="?colorPrimaryDark"
            android:layout_below="@+id/scrollview1"
            android:text="CREATE POST"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>