<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/PrimaryLight</item>
    </style>

    <style name="AppTheme.PURPLE" parent="AppTheme.Base">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/PrimaryLight</item>
        <item name="android:textColorLink">@color/PrimaryDark</item>
        <item name="android:colorControlActivated">@color/PrimaryDark</item>
    </style>

    <style name="AppTheme.RED" parent="AppTheme.Base">
        <item name="colorPrimary">#e56f76</item>
        <item name="colorPrimaryDark">#934b4f</item>
        <item name="colorAccent">#ffc7ca</item>
        <item name="android:textColorLink">#934b4f</item>
        <item name="android:colorControlActivated">#934b4f</item>
    </style>

    <style name="AppTheme.GREEN" parent="AppTheme.Base">
        <item name="colorPrimary">#76e56f</item>
        <item name="colorPrimaryDark">#4f934b</item>
        <item name="colorAccent">#caffc7</item>
        <item name="android:textColorLink">#4f934b</item>
        <item name="android:colorControlActivated">#4f934b</item>
    </style>

    <style name="AppTheme.BLUE" parent="AppTheme.Base">
        <item name="colorPrimary">#6fcee5</item>
        <item name="colorPrimaryDark">#4b8593</item>
        <item name="colorAccent">#c7f4ff</item>
        <item name="android:textColorLink">#4b8593</item>
        <item name="android:colorControlActivated">#4b8593</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@color/PrimaryDark</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>